<div id="banner-fade">
    <ul class="bjqs">
        {% for p in properties %}
        <li id="slide-{{ loop.index }}">
            <img src="{{ imageSettings.path ~ "/" ~ p.image.name }}" alt="{{ p.name }}">
            <div>
                <h2>{{ p.name|e }}</h2>
                <p>{{ p.city|e }}, {{ p.state|e }} {{ p.zip }}</p>
                <p><span>Financed Amount</span><br/>${{ p.amountFinanced|number_format }}</p>
                <p><span>Closed</span><br/>{{ p.closingDate|date("m/d/Y") }}</p>
            </div>
        </li>
        {% endfor %}
    </ul>
    <div class="clearfix"></div>
</div>
<div class="slideDeck">
    <p id="title">FEATURED FINANCINGS</p>
    {% for p in properties %}
    <div class="onDeck">
        <a id="slide-{{ loop.index }}-thumb" class="first" href="#">
            <img class="thumbnailSlide" src="{{ imageSettings.path ~ "/" ~ p.image.thumbnailName }}" alt="{{ p.name }} thumbnail">
            <p class="">
            {% if p.name|length > 17 %}
                {{ p.name[0:17] ~ "..."|e }}
            {% else %}
                {{ p.name|e }}
            {% endif %}
            </p>
            <p class="">Financed ${{ p.amountFinanced|number_format }}</p>
            <p class="">Closed {{ p.closingDate|date("m/d/Y") }}</p>
            <span class=""></span>
        </a>
        <div class="clearfix"></div>
    </div>
    {% endfor %}
    <a id="seeAll" href="/recent-financings.php">See all Financings</a>
</div>
